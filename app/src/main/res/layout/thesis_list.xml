<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dbt.ThesisList">

    <android.support.v7.widget.Toolbar
        android:id="@+id/dash_tb"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/t_imagec"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1.10"
            android:elevation="10dp"
            android:foregroundGravity="left"
            android:scaleType="centerCrop"
            android:src="@drawable/dbt_rounded_logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Ankit Khachane"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/title_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Android Developer"
                android:textColor="@color/cardview_light_background"
                android:textSize="10sp"/>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/thesis_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dash_tb"
        tools:listitem="@layout/row_thesis_detail"/>

</RelativeLayout>
